package _03_Circular_Queue;

public class CircularQueue {
	private int[] arr;
	private int front;
	private int rear;
	private final int SIZE;

	public CircularQueue(int size) {
		SIZE = size;
		arr = new int[SIZE];
		front = -1;
		rear = -1;
	}

	public void push(int num) {
		rear = (rear + 1) % SIZE;
		arr[rear] = num;
	}

	public int pop() {
		front = (front + 1) % SIZE;
		if (front == rear) {
			front = -1;
			rear = -1;
		}
		return arr[front];
	}

	public int peek() {
		int next = (front + 1) % SIZE;
		return arr[next];
	}

	public boolean isFull() {
		return (front == -1 && rear == SIZE - 1) || (rear == front && front != -1);
	}

	public boolean isEmpty() {
		return (front == rear && rear == -1);
	}

}
